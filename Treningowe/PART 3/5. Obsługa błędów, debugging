# teraz zuzyciem debug przesledzmy sobie prosta petle!!!
loop1=function(j){
  v=numeric(j);
  for (i in seq_along(1:j)){
  v[i]=i
  }  
  return(v)
}

debug(loop1)
loop1(4)

